<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.findline"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
 <!-- android.permission.INTERNET -->

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.findline.ConnexionActivity" 
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.findline.MainActivity"
            android:label="@string/title_activity_connexion" >
        </activity>
        <activity
            android:label="@string/title_activity_register"
            android:name="com.example.findline.RegisterActivity">
        </activity>
        <activity
            android:label="@string/title_activity_menu"
            android:name="com.example.findline.MenuActivity">
        </activity>
    </application>

</manifest>
